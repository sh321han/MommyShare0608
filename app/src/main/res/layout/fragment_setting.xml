<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sh321han.mommyshare.Setting.SettingFragment"
    >

    <!-- TODO: Update blank fragment layout -->


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="푸시알림"
        android:id="@+id/setting1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="44dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="57dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="공지사항"
        android:id="@+id/setting2"
        android:layout_below="@+id/setting1"
        android:layout_alignLeft="@+id/setting1"
        android:layout_alignStart="@+id/setting1"
        android:layout_marginTop="34dp"
        android:background="#FFF"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="로그아웃"
        android:id="@+id/setting3"
        android:layout_above="@+id/setting4"
        android:layout_alignLeft="@+id/setting2"
        android:layout_alignStart="@+id/setting2"
        android:background="#FFF"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="회원탈퇴"
        android:id="@+id/setting4"
        android:layout_centerVertical="true"

        android:layout_alignLeft="@+id/setting3"
        android:layout_alignStart="@+id/setting3"
        android:background="#FFF"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="버젼정보"
        android:id="@+id/setting5"
        android:layout_below="@+id/setting4"
        android:layout_alignLeft="@+id/setting4"
        android:layout_alignStart="@+id/setting4"
        android:layout_marginTop="40dp" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Switch"
        android:id="@+id/switch1"
        android:layout_marginRight="39dp"
        android:layout_marginEnd="39dp"
        android:layout_alignTop="@+id/setting1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
