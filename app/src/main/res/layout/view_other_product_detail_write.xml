<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="87dp"
    android:layout_marginBottom="9dp"
    android:background="#e4e9ea">


    <ImageView
        android:id="@+id/review_txt"
        android:layout_width="50dp"
        android:layout_height="13dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/review_txt" />

    <EditText
        android:id="@+id/editReview"
        android:layout_width="258dp"
        android:layout_height="43dp"
        android:layout_below="@+id/review_txt"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="11dp"
        android:background="@drawable/review_w_bg"
        android:hint="리뷰작성"
        android:padding="11dp"
        android:textSize="12dp" />


    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editReview"
        android:layout_toRightOf="@+id/editReview">

        <ImageButton
            android:id="@+id/btn_input"
            android:layout_width="70dp"
            android:layout_height="43dp"
            android:src="@drawable/review_btn"/>

    </android.support.v7.widget.CardView>

</RelativeLayout>